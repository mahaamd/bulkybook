@model Category

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
        <button style="width: 150px" class="btn btn-primary">create</button>
        <a style="width: 150px" asp-controller="CoverType" asp-action="Index" class="btn btn-secondary"> back to home </a>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

