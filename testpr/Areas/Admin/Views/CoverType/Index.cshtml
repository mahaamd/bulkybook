@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

@*<h1> Catygory Index </h1>*@

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            cover type list
        </div>

        <div class="col-6 text-end">
            <a asp-controller="coverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  create new cover type
            </a>
        </div>

    </div>

</div>



<table class="table table-bordered table-stripped" style="width:100%">

    <thead>
        <tr>
            <th>
                cover type Name
            </th>
            
             <th></th>       
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td width="80%">
                    @item.Name
                </td>
                <td>
                    <a class="btn btn-primary mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a>
                    <a class="btn btn-secondary mx-2 btn btn-d" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> Delete </a>
                </td>
               
            </tr>
        }

    </tbody>

</table>